---
import ProductCard from "./ProductCard";
import Products from "@libs/data.json";
import SalesModal from "./SalesModal";
---

<section id="products">
  <div class="container flex flex-col mx-auto gap-6 pt-32 pb-12">
    <div class="bg-rose-500 w-full mx-auto py-2 px-2 lg:px-16 text-center mb-8 md:mb-16">
      <div
        class="w-full flex flex-col md:flex-row items-center justify-center pt-2 gap-4"
      >
        <h3 class="font-bold text-slate-100 md:text-lg">
          Consulta precios y modelos por WhatsApp o nuestras redes sociales.
        </h3>
        <SalesModal client:load />
      </div>
    </div>

    <div class="grid grid-cols-1 gap-8 lg:grid-cols-2 xl:grid-cols-3">
      {
        Products.map((product) => (
          <ProductCard
            client:load
            img={product.img}
            title={product.title}
            description={product.description}
            animation={product.animation}
            price={product.price}
          />
        ))
      }
    </div>
  </div>
</section>
